### ALIASES
alias va="vim ~/.dotfiles/aliases.zsh"
alias vp="vim ~/.dotfiles/packages.zsh"
alias vf="vim ~/.dotfiles/functions.zsh"
alias vt="vim ~/.dotfiles/themes/cswenberg.zsh-theme"

# Git
alias gs="git status"
alias gd="git diff"
alias gb="git branch"
alias gpl="git pull"
alias gl="git log"
alias gaa="git add ."
alias gcm="git commit -m"
alias gph="git push"
alias gup="git push --set-upstream origin $(git_current_branch)"
alias gck="git checkout"
alias gcb="git checkout -b"
alias gr="git rebase"
alias grm="git rebase main"

# Dapp tools
alias db="dapp build"
alias dt="dapp test"
alias dtm="dapp test -m"
